{
  "extends": ["tslint:latest", "tslint-config-prettier", "tslint-config-airbnb"],
  "rules": {
    "class-name": true,
    "variable-name": [true, "allow-leading-underscore", "allow-snake-case", "allow-pascal-case"],
    "import-name": [
      true,
      {
        "koa-router": "KoaRouter"
      }
    ],
    "comment-format": [true, "check-space"],
    "indent": [true, "spaces"],
    "one-line": [true, "check-open-brace", "check-whitespace"],
    "no-var-keyword": true,
    "ter-arrow-parens": [true, "always"],
    "quotemark": [true, "double", "avoid-escape"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "no-implicit-dependencies": false,
    "no-submodule-imports": [
      false,
      "src/*",
      "@usecases/*",
      "@errors/*",
      "@gateways/*",
      "@models/*",
      "@repositories/*",
      "@injection",
      "@utils/*",
      "@views/*",
      "@common/*"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "interface-name": false,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-null-keyword": false,
    "prefer-const": true,
    "jsdoc-format": true,
    "linebreak-style": [false, "LF"],
    "max-line-length": [
      true,
      {
        "limit": 120
      }
    ],
    "align": false,
    "trailing-comma": false,
    "no-increment-decrement": false,
    "ter-computed-property-spacing": false,
    "ter-indent": false,
    "no-empty": false,
    "object-shorthand-properties-first": false
  }
}
